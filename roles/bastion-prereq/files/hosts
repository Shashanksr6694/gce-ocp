# Create an OSEv3 group that contains the masters, nodes, and etcd groups
[OSEv3:children]
masters
nodes
etcd
nfs

# Set variables common for all OSEv3 hosts
[OSEv3:vars]
# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=jacobborella
ansible_sudo=true
ansible_become=true
openshift_disable_check=disk_availability,docker_storage,memory_availability
openshift_node_groups=[{'name': 'node-config-all-in-one', 'labels': ['node-role.kubernetes.io/master=true', 'node-role.kubernetes.io/infra=true', 'node-role.kubernetes.io/compute=true']}]


# If ansible_ssh_user is not root, ansible_become must be set to true
#ansible_become=true

openshift_deployment_type=openshift-enterprise

openshift_master_default_subdomain=master.gce-ocp.demo-zone.dk
openshift_public_hostname=master.gce-ocp.demo-zone.dk

openshift_auth_type=allowall
openshift_master_identity_providers=[{'name': 'allow_all', 'login': 'true', 'challenge': 'true', 'kind': 'AllowAllPasswordIdentityProvider'}]

openshift_logging_install_logging=true
openshift_metrics_install_metrics=true

# fix for https://github.com/openshift/openshift-ansible/issues/8717
oreg_url=registry.access.redhat.com/openshift3/ose-${component}:${version}
openshift_examples_modify_imagestreams=true

#config for nfs
openshift_hosted_etcd_storage_kind=nfs
openshift_hosted_etcd_storage_nfs_options="*(rw,root_squash,sync,no_wdelay)"
openshift_hosted_etcd_storage_nfs_directory=/opt/osev3-etcd 
openshift_hosted_etcd_storage_volume_name=etcd-vol2 
openshift_hosted_etcd_storage_access_modes=["ReadWriteOnce"]
openshift_hosted_etcd_storage_volume_size=1G
openshift_hosted_etcd_storage_labels={'storage': 'etcd'}

# fix for ansible service catalog
openshift_service_catalog_image_version=v3.10

# host group for masters
[masters]
master-1

# host group for nfs
[nfs]
master-1

# host group for etcd
[etcd]
master-1

# host group for nodes, includes region info
[nodes]
master-1 openshift_node_group_name='node-config-all-in-one' openshift_node_labels="{'region':'infra','zone':'east'}" openshift_schedulable=true
